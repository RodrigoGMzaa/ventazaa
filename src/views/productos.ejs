<%- include('./partials/head') -%>
<%- include('./partials/navv') -%>


<div class="container">
    <div class="row">
      
        <div class="col-md-5 offset-md-3">
            <form action="/products/enviar" method="POST"  enctype="multipart/form-data">
              <br>
                <div class="card border-dark mb-3" style="max-width: 20rem;">
                  <div class="card-header"><h5>Agregar Producto</h5></div>
                  <div class="card-body">
                    <div class="form-group">
                      <input type="text" name="codigo" autocomplete="off" placeholder="Codigo" class="validate">
                    </div>
                    <div class="form-group">
                      <input type="text" name="nombre" autocomplete="off" placeholder="Nombre" class="validate" >
                    </div>
                    <!--SELECT CATEGORY-->
                    <div class="form-group">
                      <select class="custom-select" name="departamento" >
                        <option selected name="departamento">Departamento...</option>
                        <% for(let i = 0; i < categoris.length; i++) {%>
                         <option ><%=categoris[i].category%></option>
                         <%}%>
                    </select>
                    </div>
                    <div class="form-group">
                      <div class="row">
                          <div class="col-sm-7">
                              <div class="input-group mb-4">
             
                                  <input type="text" id="busquedaAlmacen" class="form-control" placeholder="Buscar..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                                  <div class="input-group-append">
                                    <button class="btn  bg-primary text-white" id="botonAlmacen" type="reset"><i class="fas fa-search "></i></button>
                                  </div>
                                </div>
                          </div>
                         
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="row">
                          <div class="col-sm">
                              <input type="text" class="form-control" id="inputAlmacen" placeholder="Nombre">
                          </div>
                          <div class="col-sm">
                              <input type="text" class="form-control" id="inputAlmacen2" name="idalmacen" placeholder="id">
                          </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <select class="custom-select" name="unidades" >
                        <option selected>Unidad</option>
                         <option >Kg</option>
                         <option >Pieza</option>
                         <option >lt</option>
                         
                    </select>
            
                    </div>
                    <!--caja descripcion-->
                    <div class="form-group">
                      <textarea class="form-control" name="descripcion" rows="3"  spellcheck="false" placeholder="descripcion" class="validate"></textarea>
                    </div>
                    <!--copy-->
                    <div>
                      <div class="col">
                        <label for="recipient-name" class="col-form-label">Costo:</label>
                      <div class="input-group mb-3">
                      <div class="input-group-prepend">
                      <span class="input-group-text">$</span>
                       </div>
                           <input type="text" class="form-control" name="costo" aria-label="Amount (to the nearest dollar)" placeholder="0.00" class="validate">
                       </div>
                      </div>
                      <div class="col">
                        <label for="recipient-name" class="col-form-label">Cantidad:</label>
                      <div class="input-group mb-3">
                      
                           <input type="text" class="form-control" name="cantidad" aria-label="Amount (to the nearest dollar)" placeholder="0.00" class="validate">
                       </div>
                      </div>
                      
                  </div>
                    <div class="row">
                      <div class="col">
                          <label for="recipient-name" class="col-form-label">Precio:</label>
                          <div class="input-group mb-3">
                          <div class="input-group-prepend">
                          <span class="input-group-text">$</span>
                           </div>
                               <input type="text" class="form-control" name="precio" aria-label="Amount (to the nearest dollar)" placeholder="0.00" class="validate" >
                           </div>
                      </div>
            
                       <div class="col">
                          <label for="recipient-name" class="col-form-label">Precio Mayoreo:</label>
                          <div class="input-group mb-3">
                          <div class="input-group-prepend">
                              <span class="input-group-text">$</span>
                          </div>
                              <input type="text" class="form-control" name="mayoreo" aria-label="Amount (to the nearest dollar)" placeholder="0.00" class="validate" >
                           </div>
                      </div>
                  </div>
            
            
                  <label for="recipient-name" class="col-form-label">Seleccione una Imagen:</label>
                  <div class="input-group mb-3">
                      <div class="custom-file">
                          <input type="file" name="image" class="custom-file-input" >
                          <label class="custom-file-label" for="inputGroupFile02">Imagen cargada..</label>
                      </div>
                  </div>
            
                  </div>
                  <div class="form-group" style="text-align: right;width:200px" >
                    <button type="submit"  class="btn btn-primary">Guardar</button>
                  </div>
                </div>
              </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="/js/.idalmacen.js"></script>
 

<%- include('./partials/foot') -%>