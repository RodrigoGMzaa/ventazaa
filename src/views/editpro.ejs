<%- include('./partials/head') -%>
<%- include('./partials/navv') -%>


<div class="container">
    <div class="row">
      <br>
        <div class="col-md-5 offset-md-3">
            <form action="/products/edit/<%= Producto._id%>" method="POST" >
                <div class="card border-dark mb-3" style="max-width: 20rem;">
                  <div class="card-header"><h5>Modificar Producto</h5></div>
                  <div class="card-body">
                    <div class="form-group">
                      <input type="text" name="codigo" autocomplete="off" placeholder="Codigo" class="validate" value="<%= Producto.codigo%>">
                    </div>
                    <div class="form-group">
                      <input type="text" name="nombre" autocomplete="off" placeholder="Nombre" class="validate" value="<%= Producto.nombre%>">
                    </div>
                    <!--SELECT CATEGORY-->
                    <div class="form-group">
                      <select class="custom-select" name="departamento" >
                        <option selected><%= Producto.departamento%></option>
                        <% for(let i = 0; i < categoris.length; i++) {%>
                         <option ><%=categoris[i].category%></option>
                         <%}%>
                    </select>
                    </div>
                    <div class="form-group">
                      <input type="text" name="stock" autocomplete="off" placeholder="stock" class="validate" value="<%= Producto.stock%>">
                    </div>
                    <div class="form-group">
                      <select class="custom-select" name="unidades" >
                        <option selected>Unidad</option>
                         <option >Kg</option>
                         <option >Pieza</option>
                         <option >lt</option>
                         
                    </select>
            
                    </div>
                    <!--caja descripcion-->
                    <div class="form-group">
                      <textarea class="form-control" name="descripcion" rows="3"  spellcheck="false" placeholder="descripcion" class="validate"><%= Producto.descripcion%></textarea>
                    </div>
                    <!--copy-->
                    <div>
                      <label for="recipient-name" class="col-form-label">Costo:</label>
                      <div class="input-group mb-3">
                      <div class="input-group-prepend">
                      <span class="input-group-text">$</span>
                       </div>
                           <input type="text" class="form-control" name="costo" aria-label="Amount (to the nearest dollar)" placeholder="0.00" class="validate" value="<%= Producto.costo%>">
                       </div>
                  </div>
                    <div class="row">
                      <div class="col">
                          <label for="recipient-name" class="col-form-label">Precio:</label>
                          <div class="input-group mb-3">
                          <div class="input-group-prepend">
                          <span class="input-group-text">$</span>
                           </div>
                               <input type="text" class="form-control" name="precio" aria-label="Amount (to the nearest dollar)" placeholder="0.00" class="validate" value="<%= Producto.precio%>">
                           </div>
                      </div>
            
                       <div class="col">
                          <label for="recipient-name" class="col-form-label">Precio Mayoreo:</label>
                          <div class="input-group mb-3">
                          <div class="input-group-prepend">
                              <span class="input-group-text">$</span>
                          </div>
                              <input type="text" class="form-control" name="mayoreo" aria-label="Amount (to the nearest dollar)" placeholder="0.00" class="validate" value="<%= Producto.mayoreo%>">
                           </div>
                      </div>
                  </div>
            
            
                  <label for="recipient-name" class="col-form-label">Seleccione una Imagen:</label>
                  <div class="input-group mb-3">
                      <div class="custom-file">
                          <input type="file" name="image" class="custom-file-input" >
                          <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                      </div>
                  </div>
            
                  </div>
                  <div class="card-header" >
                    <button type="submit" class="btn btn-primary">Guardar</button>
                  </div>
                </div>
              </form>
        </div>
    </div>
</div>

  <%- include('./partials/foot') -%>