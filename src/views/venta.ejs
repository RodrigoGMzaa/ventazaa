<%- include('./partials/head') -%>
<%- include('./partials/navv') -%>

<div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-6">
          <div class="form-group">
            <label for="">Cliente</label>
            <select name="" id="" class="form-control" [(ngModel)]="venta.cliente">
              <option value="">Seleccionar</option>
              <option *ngFor="let cliente of clientes" value="{{cliente._id}}">
                {{cliente.nombre}}
              </option>
            </select>
          </div>
        </div>
        <div class="col-6">
          <label for="">N factura 000</label>
        </div>
      </div>
    </div>
    <div class="col-12" style="margin-top: 5%;">
      <div class="row">
        <div class="col-4">
          <div class="form-group">
            <label for="">Producto</label>
            
           <select name=""  class="form-control" (change)="poner_precio()" id="venta.producto">
              <option value="">Seleccionar</option>
              <option  ">
                {{producto.nombre}}
              </option>
            </select>
          </div>
          <div class="form-group">
            <label for="">Precio</label>
            <input type="text" class="form-control" disabled id="venta.precio">
          </div>
          <div class="form-group">
            <label for="">Cantidad</label>
            <input type="text" class="form-control" id="venta.cantidad">
          </div>
          <div class="form-group">
            <button class="btn btn-primary float-right" (click)="agregar()" >Agregar</button>
          </div>
        </div>
        <div class="col-8">
          <table class="table">
            <thead>
              <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Sub total</th>
                <th>Eliminar</th>
              </tr>
            </thead>
            <tbody>
              <tr id="venta.productos_detalle">
                <td>{{pr.producto_nombre}}</td>
                <td>{{pr.cantidad}}</td>
                <td>{{pr.precio}}</td>
                <td>{{pr.subtotal}}</td>
                <td></td>
              </tr>
            </tbody>
            <thead>
              <tr>
                <th colspan="4"></th>
                <th>TOTAL:{{venta.total}}</th>
              </tr>
            </thead>
          </table>
          <button class="btn btn-success float-right" (click)="guardar()">Cobrar</button>
        </div>
      </div>
    </div>
  </div> 

  <%- include('./partials/foot') -%>